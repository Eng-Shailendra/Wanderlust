
<% if(success && success.length) {   %>
    <div id="flash-message" class="alert alert-success alert-dismissible fade show col-4, ofset-3" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
     </div> 
<% }%>
    

<% if(error &&  error.length) { %>
    <div id="flash-message" class="alert alert-warning alert-dismissible fade show col-4, ofset-3" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
     </div> 
<% }%>